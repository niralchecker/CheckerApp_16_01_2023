<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layoutDirection="ltr"
    tools:context="" >

    
    <TextView
        android:id="@+id/txttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_time"
        android:layout_centerHorizontal="true"
        android:text="@string/ss"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />
    
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:text="4:38:55"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/Layout_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boder"
            android:orientation="vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_hour_plus"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/black_translucent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="16pt" />

            <TextView
                android:id="@+id/text_hour"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="4"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_hour_minus"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/black_translucent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="16pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_minuts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boder"
            android:orientation="vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_minut_plus"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/black_translucent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="16pt" />

            <TextView
                android:id="@+id/txt_minute"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="38"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_minut_minus"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/black_translucent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="16pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boder"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_second_plus"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/black_translucent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="16pt" />

            <TextView
                android:id="@+id/txt_second"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="55"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_second_minus"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/black_translucent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="16pt" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/btn_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/snd_boder"
            android:padding="10dp"
            android:text="Set"
            android:textColor="@color/white"
            android:textSize="11pt" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/snd_boder"
            android:padding="10dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="11pt" />
    </LinearLayout>

</RelativeLayout>