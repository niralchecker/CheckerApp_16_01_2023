<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr">

    <LinearLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f18931" >

            <CheckBox
                android:id="@+id/chkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/critlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/bitcoinIco"
                android:layout_toRightOf="@+id/chkBox"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/Payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/bitcoinIco"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toLeftOf="@+id/Payment"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/bitcoin" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ClientNameT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PaidT"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/s_item_column_0_line_81_file_137"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/ClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Paid"
                android:layout_toRightOf="@+id/ClientNameT"
                android:textColor="#cdcdcd"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/BranchNameT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BranchCodeT"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/s_item_column_0_line_110_file_137"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/BranchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FlowTypeT"
                android:layout_toRightOf="@+id/BranchCode"
                android:textColor="#cdcdcd"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/CityNameT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BranchCodeT"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/s_item_column_0_line_139_file_137"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/cityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FlowTypeT"
                android:layout_toRightOf="@+id/BranchCode"
                android:textColor="#cdcdcd"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/DatesT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RegionNameT"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/s_item_column_0_line_168_file_137"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/Dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RegionName"
                android:layout_toRightOf="@+id/AddressT"
                android:textColor="#cdcdcd"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TotalT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ProjectNameT"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/s_item_column_0_line_196_file_137"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ProjectName"
                android:layout_toRightOf="@+id/DescriptionT"
                android:textColor="#cdcdcd"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ShowDistanceT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/s_item_column_0_line_223_file_137"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/ShowDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cdcdcd"
                android:textSize="13dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottombar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5px"
            android:layout_marginTop="5px" >

            <Button
                android:id="@+id/btnApply"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/txtComment"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#9DC40F"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/s_item_column_0_line_254_file_137"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>