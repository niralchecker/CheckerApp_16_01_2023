<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr" >

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#AAFFAA"
        android:text=""
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dotimage"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="3px"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/circle_file_name" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@+id/sizeText"
            android:layout_toRightOf="@+id/dotimage"
            android:textColor="#000000"
            android:textSize="13sp" />



        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5px"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete_attach"
            android:visibility="visible" />

        <TextView
            android:id="@+id/sizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnClose"
            android:layout_marginTop="5px"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:textColor="#878787"
            android:textSize="11sp" />

        <View
            android:id="@+id/qnamelabel"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/nameText"
            android:layout_marginBottom="5px"
            android:layout_marginTop="5px"
            android:background="#cdcdcd"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/valueText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qnamelabel"
            android:layout_marginBottom="5px"
            android:textColor="#606160"
            android:textSize="10dp"
            android:visibility="gone" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/imgv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>