<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="horizontal" >

    <View
        android:id="@+id/approved_paid"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/AddedAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/approved_paid"
        android:layout_toLeftOf="@+id/approved_paid"
        android:textColor="#000000"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/FlowType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AddedAt"
        android:layout_toLeftOf="@+id/approved_paid"
        android:textColor="#000000"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/Value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FlowType"
        android:layout_toLeftOf="@+id/approved_paid"
        android:textColor="#000000"
        android:textSize="14dp" />

</RelativeLayout>