<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/backGroundDrawable"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:layoutDirection="ltr" >

    <RelativeLayout
        android:id="@+id/rvjobdetailscreen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/navigation_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/jd_heder"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Edit Peronal Info"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvjobdetailscreen"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <RelativeLayout
            android:id="@+id/rvjobdetailscreen2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rvjobdetailscreen"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/jshoper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="ShoperId"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <Label
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jshoper"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="id"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/pasword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Password"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/pwordtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pasword"
                android:layout_marginLeft="5dp"
                android:layout_span="2"
                android:background="@drawable/textbg"
                android:maxLength="30"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <TextView
                android:id="@+id/paswordhint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pwordtext"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="(Letters and numbers only)"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paswordhint"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Address"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/adretext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_marginLeft="5dp"
                android:layout_span="2"
                android:background="@drawable/textbg"
                android:maxLength="30"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <TextView
                android:id="@+id/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adretext"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Region name"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/dehli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/region"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Delhi"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/adehli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dehli"
                android:layout_marginLeft="5dp"
                android:layout_span="2"
                android:background="@drawable/textbg"
                android:maxLength="30"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adehli"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Post Code"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/apst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post"
                android:layout_marginLeft="5dp"
                android:layout_span="2"
                android:background="@drawable/textbg"
                android:maxLength="30"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apst"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Mobile"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/amobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile"
                android:layout_marginLeft="5dp"
                android:layout_span="2"
                android:background="@drawable/textbg"
                android:maxLength="30"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <TextView
                android:id="@+id/mobilehint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/amobile"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="(Will be used sending as text massage requried)"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobilehint"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Day time phone (inc int. code)"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/aday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day"
                android:layout_marginLeft="5dp"
                android:layout_span="2"
                android:background="@drawable/textbg"
                android:maxLength="30"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <TextView
                android:id="@+id/eveng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aday"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Evening time phone (inc int. code)"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/aeveng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eveng"
                android:layout_marginLeft="5dp"
                android:layout_span="2"
                android:background="@drawable/textbg"
                android:maxLength="30"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aeveng"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Primery"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/aprimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/primary"
                android:layout_marginLeft="5dp"
                android:layout_span="2"
                android:background="@drawable/textbg"
                android:maxLength="30"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <TextView
                android:id="@+id/sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Secondary"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/asec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sec"
                android:layout_marginLeft="5dp"
                android:layout_span="2"
                android:background="@drawable/textbg"
                android:maxLength="30"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <TextView
                android:id="@+id/birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/asec"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Birthday"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/abirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birth"
                android:layout_marginLeft="5dp"
                android:layout_span="2"
                android:background="@drawable/textbg"
                android:maxLength="30"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="normal"
                android:typeface="normal" />
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/darktview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/darkness_value"
        android:visibility="gone" />


</RelativeLayout>