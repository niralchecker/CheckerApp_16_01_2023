<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dip" />

            <solid android:color="#333333" />

            <gradient
                android:angle="270"
                android:centerColor="#ff353a38"
                android:centerY="0.5"
                android:endColor="#ff141614"
                android:startColor="#ff6d6e6d" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="15dip" />

                <solid android:color="#CFDA9A" />

                <gradient
                    android:angle="0"
                    android:centerColor="#ff8ACFC9"
                    android:endColor="#ff000099"
                    android:startColor="#ff000099" />
            </shape>
        </clip>
    </item>

</layer-list>